                                            $scope.BuyerMST = vInvoice.buyer.MST;
                                            $scope.BuyerDChi = vInvoice.buyer.DChi;
                                            $scope.in4_Nky = vInvoice.buyer.NKy;

                                            //hiện thị thông tin đã kiểm tra
                                            $scope.in4_MSHDon = vInvoice.generalInformation.KHMSHDon;
                                            $scope.in4_KHHDon = vInvoice.generalInformation.KHHDon;
                                            $scope.in4_SHDon = vInvoice.generalInformation.SHDon;
                                            $scope.in4_NHDon = vInvoice.generalInformation.NLap;
                                             
