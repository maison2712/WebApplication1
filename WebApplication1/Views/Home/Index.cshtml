            //Nút đọc chi tiết từng mail một theo id
            $scope.readDetail = function (id) {
                $(document).off("click", ".btnShowModalHDDTClick"); //Xóa chức năng vừa được click
                $(document).off("click", ".btnShowModalEMLClick"); 
                $("#emailDetail").css("display", "block")
                $("#fileAttactment").empty();
                //Gọi API để lấy ra data của từng mail theo id
                $http.get("/Home/getEachEmail?Id_mail=" + id/* + "&username=" + gUserName + "&password=" + gPassWord*/)
                    .then(function (response) {
                        $scope.emailDetail = response.data.data; console.log($scope.emailDetail)
                        $scope.subject = $scope.emailDetail.Subject;
                        $scope.from = $scope.emailDetail.From;
                        var time = $scope.emailDetail.TimeReceive;
                        $scope.to = $scope.emailDetail.To;
                        $scope.FileAttactment = $scope.emailDetail.FileAttactment;
                        $scope.Typefilename = $scope.emailDetail.Typefilename;
                        //Định dạng lại thời gian nhận mail
                        const replaced = time.replace(/\D/g, '');
                        let numTime;
                        if (replaced !== '') {
                            numTime = Number(replaced);
                        }
                        //-Định dạng lại thời gian nhận mail-//
                        var stringdate = new Date(numTime).toISOString().slice(0, 10).replace(/-/g, ""); //Định dạng ngày tháng nhận thư theo dạng (yyyyMMdd)
                        //Tách tên của người dùng mail và địa chỉ mail
                        const match = $scope.from.match(/"(.+)"\s*<(.+)>/);
                        $scope.nameEmail = match[1];
                        $scope.address = match[2];

                        $scope.time = new Date(numTime).toLocaleString(); // định dạng ngày tháng nhận thư để hiển thị vào form chi tiết mail
                        let listFileName = $scope.FileAttactment.split(";");
                        var vCheckFile = false;
                        for (let i = 0; i < listFileName.length; i++) {
                            if (listFileName[i].split('.').pop() == "xml") {
                                $("#fileAttactment").append(
                                    '<div class="col-md-3 my-5 text-center" style="display: flex; flex-direction: column;">' +
                                    '<i class="fa-regular fa-file text-primary fa-2xl mb-4"></i>' +
                                    '<a href="/Home/GetFile?fileName=' + listFileName[i] + '">' + listFileName[i] + '</a>' +  //Gọi API truyền từng tên file vào hàm GetFile để tải file
                                    '<button class="btn text-danger btnShowModalHDDTClick" data-file-name="' + listFileName[i] + '"><i class="fa-regular fa-eye"></i>&nbsp; Xem hóa đơn</button>' + //Nút xem file XML
                                    '</div>'
                                )
                                vCheckFile = true;
                            }
                            else if (listFileName[i].split('.').pop() == "zip" || listFileName[i].split('.').pop() == "rar") {
                                $("#fileAttactment").append(
                                    '<div class="col-md-3 my-5 text-center" style="display: flex; flex-direction: column;">' +
                                    '<i class="fa-regular fa-file-zipper text-primary fa-2xl mb-4"></i>' +
                                    '<a href="/Home/GetFile?fileName=' + listFileName[i] + '">' + listFileName[i] + '</a>' + //Gọi API chuyền từng tên file vào hàm GetFile để tải file
                                    '</div>'
                                )
                            }
                            else if (listFileName[i].split('.').pop() == "pdf") {
                                $("#fileAttactment").append(
                                    '<div class="col-md-3 my-5 text-center" style="display: flex; flex-direction: column;">' +
                                    '<i class="far fa-file-pdf text-primary fa-2xl mb-4"></i>' +
                                    '<a href="/Home/GetFile?fileName=' + listFileName[i] + '">' + listFileName[i] + '</a>' + //Gọi API chuyền từng tên file vào hàm GetFile để tải file
                                    '</div>'
                                )
                            }
                            else {
                                $("#fileAttactment").append(
                                    '<div class="col-md-3 my-5 text-center" style="display: flex; flex-direction: column;">' +
                                    '<i class="fas fa-file-invoice text-primary fa-2xl mb-4"></i>' +
                                    '<a href="#">' + listFileName[i] + '</a>' + //Gọi API chuyền từng tên file vào hàm GetFile để tải file
                                    '<button class="btn text-danger btnShowModalEMLClick" data-file-name="' + listFileName[i] + '"><i class="fa-regular fa-eye"></i>&nbsp; Xem hóa đơn</button>' +
                                    '</div>'
                                )
