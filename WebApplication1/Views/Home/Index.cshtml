            //Nút đọc chi tiết từng mail một theo id
            $scope.readDetail = function (id) {
                $(document).off("click", ".btnShowModalHDDTClick"); //Xóa chức năng vừa được click
                $("#emailDetail").css("display", "block")
                $("#fileAttactment").empty();
                //Gọi API "id, tên email, và mật khẩu" vào hàm getEachEmail để lấy ra data của từng email theo id 
                $http.get("/Home/getEachEmail?Id_mail=" + id + "&username=" + gUserName + "&password=" + gPassWord)
                    .then(function (response) {
                        $scope.emailDetail = response.data.data; console.log($scope.emailDetail) 
                        $scope.subject = $scope.emailDetail.Subject;
                        $scope.from = $scope.emailDetail.From;
                        var time = $scope.emailDetail.TimeReceive;
                        $scope.to = $scope.emailDetail.To;
                        $scope.FileAttactment = $scope.emailDetail.FileAttactment;
                        $scope.Typefilename = $scope.emailDetail.Typefilename;
                        //Định dạng lại thời gian nhận email
                        const replaced = time.replace(/\D/g, '');
                        let numTime;
                        if (replaced !== '') {
                            numTime = Number(replaced);
                        }
                        //-Định dạng lại thời gian nhận email-//
                        var stringdate = new Date(numTime).toISOString().slice(0, 10).replace(/-/g, ""); //Định dạng ngày tháng nhận thư theo dạng (yyyyMMdd)
                        //Tách tên của người dùng email và địa chỉ email của chủ sở hữu
                        const match = $scope.from.match(/"(.+)"\s*<(.+)>/);
                        $scope.nameEmail = match[1];
                        $scope.address = match[2];
                        //-Tách tên của người dùng email và địa chỉ email của chủ sở hữu-//
                        $scope.time = new Date(numTime).toLocaleString(); // định dạng ngày tháng nhận thư để hiển thị vào form chi tiết email
                        let listFileName = $scope.FileAttactment.split(";"); 
