                                console.log(fileName);
                                //Gọi API  để đọc file XML và lấy ra thông tin hóa đơn theo ngày nhận thư và tên file 
                                $http.get("/Home/ReadXML?stringdate=" + stringdate + "&fileName=" + fileName)
                                    .then(function (respone) {
                                        if (respone.data.error) {
                                            alert(respone.data.error);
                                            $("#textResult").html(respone.data.error).removeClass("text-success").addClass("text-danger");
                                        } else {
                                            var vInvoice = respone.data.data; console.log(vInvoice)
                                            //hiện thị thông tin Chữ ký số
                                            $scope.Issueser1 = vInvoice.Certificate2.Issueser; 
                                            $scope.Subject = vInvoice.Certificate2.Subject;

                                            //hiện thị thông tin người bán
